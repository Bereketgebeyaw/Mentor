<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/request.css"> <!-- Link to form-specific CSS -->
    <title>Request a Service</title>
</head>

<body>
    <%- include('partials/header') %> <!-- Include header -->
<link rel="stylesheet" href="/css/chat-popup.css"> <!-- Link to portfolio CSS -->
    <!-- Request Service Section -->
    <section class="request-service-section">
        <div class="form-container">
            <h2 class="form-title">Request a Service</h2>
            <p class="form-description">
            </p>
            <form action="/request-service" method="POST">
                <!-- Full Name -->
                <div class="form-group">
                    <label for="name">Full Name:</label>
                    <input type="text" id="name" name="name" placeholder="Enter your full name" required>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email address" required>
                </div>

                <!-- Service Type -->
                <div class="form-group">
                    <label for="service-type">Service Type:</label>
                    <select id="service-type" name="serviceType" required>
                        <option value="" disabled selected>Select a service</option>
                        <option value="management-consultancy">Management Consultancy</option>
                        <option value="seminars-trainings">Workshops,Seminars and Trainings</option>
                        <option value="automation-services">Automation Services</option>
                    </select>
                </div>

                <!-- Link to Service Details -->
                <p class="service-details">
                    <a href="/services" class="view-details">View Service Details</a>
                </p>

                <!-- Additional Details -->
                <div class="form-group">
                    <label for="details">Additional Details:</label>
                    <textarea id="details" name="details" rows="4" placeholder="Describe your requirements"></textarea>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn-submit">Submit Request</button>
            </form>
        </div>
    </section>

    <%- include('partials/footer') %> <!-- Include footer -->
    <section id="popup" class="popup">
        <%- include('chat-popup') %> <!-- Include the portfolio -->
    </section>
</body>
</html>
